{% comment %}
  Gift Guide Banner Section
  - Built from scratch (no Dawn components)
  - Fully editable from theme customizer
  - Responsive
  - Button animation via CSS only
{% endcomment %}

<section
  class="gift-banner"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  "
>
  {% if section.settings.background_image != blank %}
    <div
      class="gift-banner__bg"
      style="background-image: url('{{ section.settings.background_image | image_url }}');"
      aria-hidden="true"
    ></div>
  {% endif %}

  <div class="gift-banner__container">
    <!-- Top bar -->
    <header class="gift-banner__top">
      <div class="gift-banner__logo">
        {{ section.settings.logo_text }}
      </div>

      <div class="gift-banner__tagline">
        {{ section.settings.tagline }}
      </div>

      {% if section.settings.cta_label != blank %}
        <a
          href="{{ section.settings.cta_link }}"
          class="gift-banner__cta"
        >
          {{ section.settings.cta_label }}
          <span class="gift-banner__arrow">→</span>
        </a>
      {% endif %}
    </header>

    <!-- Main content -->
    <div class="gift-banner__content">
      <h1 class="gift-banner__heading">
        {{ section.settings.heading }}
      </h1>

      <p class="gift-banner__description">
        {{ section.settings.description }}
      </p>

      {% if section.settings.shop_label != blank %}
        <a
          href="{{ section.settings.shop_link }}"
          class="gift-banner__button"
        >
          {{ section.settings.shop_label }}
          <span class="gift-banner__arrow">→</span>
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .gift-banner {
    position: relative;
    overflow: hidden;
  }

  .gift-banner__bg {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    opacity: 0.08;
    pointer-events: none;
  }

  .gift-banner__container {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .gift-banner__top {
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    gap: 16px;
    margin-bottom: 64px;
  }

  .gift-banner__logo {
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .gift-banner__tagline {
    text-align: center;
    font-size: 14px;
  }

  .gift-banner__cta {
    background: {{ section.settings.cta_bg }};
    color: {{ section.settings.cta_color }};
    padding: 12px 20px;
    text-decoration: none;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
  }

  .gift-banner__content {
    max-width: 520px;
  }

  .gift-banner__heading {
    font-size: 48px;
    margin-bottom: 16px;
  }

  .gift-banner__description {
    margin-bottom: 32px;
    line-height: 1.6;
  }

  .gift-banner__button {
    background: {{ section.settings.button_bg }};
    color: {{ section.settings.button_color }};
    padding: 16px 28px;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .gift-banner__arrow {
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .gift-banner__cta:hover .gift-banner__arrow,
  .gift-banner__button:hover .gift-banner__arrow {
    transform: translateX(6px);
  }

  /* Mobile */
  @media (max-width: 768px) {
    .gift-banner__top {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 12px;
    }

    .gift-banner__content {
      max-width: 100%;
      text-align: center;
    }

    .gift-banner__heading {
      font-size: 36px;
    }
  }
</style>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo text", "default": "TISSO VISON" },
    { "type": "text", "id": "tagline", "label": "Top tagline", "default": "Find the ideal gift for your loved ones." },

    { "type": "text", "id": "cta_label", "label": "Top CTA label", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "cta_link", "label": "Top CTA link" },

    { "type": "text", "id": "heading", "label": "Main heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination." },

    { "type": "text", "id": "shop_label", "label": "Shop button label", "default": "SHOP NOW" },
    { "type": "url", "id": "shop_link", "label": "Shop button link" },

    { "type": "image_picker", "id": "background_image", "label": "Background image" },

    { "type": "color", "id": "background_color", "label": "Background color", "default": "#ffffff" },
    { "type": "color", "id": "cta_bg", "label": "CTA background", "default": "#fff200" },
    { "type": "color", "id": "cta_color", "label": "CTA text color", "default": "#000000" },
    { "type": "color", "id": "button_bg", "label": "Shop button background", "default": "#000000" },
    { "type": "color", "id": "button_color", "label": "Shop button text color", "default": "#ffffff" },

    { "type": "range", "id": "padding_top", "label": "Padding top", "min": 40, "max": 200, "step": 10, "default": 100 },
    { "type": "range", "id": "padding_bottom", "label": "Padding bottom", "min": 40, "max": 200, "step": 10, "default": 100 }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner"
    }
  ]
}
{% endschema %}
