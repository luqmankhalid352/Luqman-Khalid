{% comment %}
  Gift Guide Banner Section
{% endcomment %}

<div class="gg-banner">
  <div class="gg-banner__container">
    <div class="gg-banner__content">
      {% if section.settings.title != blank %}
        <h1 class="gg-banner__title">{{ section.settings.title }}</h1>
      {% endif %}
      
      {% if section.settings.subtitle != blank %}
        <p class="gg-banner__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      {% if section.settings.btn_text != blank %}
        <a href="{{ section.settings.btn_link }}" class="gg-banner__btn">
          {{ section.settings.btn_text }}
          <span class="gg-arrow">&rarr;</span>
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .gg-banner {
    position: relative;
    width: 100%;
    min-height: 500px;
    background-image: url('{{ section.settings.bg_image | image_url: width: 2000 }}');
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 60px 20px;
  }
  
  /* Overlay for readability */
  .gg-banner::before {
    content: "";
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(255, 255, 255, 0.85); /* Adjust opacity based on design */
    z-index: 1;
  }

  .gg-banner__container {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
  }

  .gg-banner__title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 20px;
    color: #000;
    line-height: 1.2;
  }

  .gg-banner__subtitle {
    font-size: 1.2rem;
    margin-bottom: 40px;
    color: #333;
    line-height: 1.5;
  }

  .gg-banner__btn {
    display: inline-flex;
    align-items: center;
    background: #000;
    color: #fff;
    padding: 15px 40px;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 1px;
    transition: background 0.3s ease;
  }

  .gg-banner__btn:hover {
    background: #333;
  }

  .gg-arrow {
    margin-left: 10px;
    transition: transform 0.3s ease;
  }

  .gg-banner__btn:hover .gg-arrow {
    transform: translateX(5px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .gg-banner { min-height: 400px; }
    .gg-banner__title { font-size: 2rem; }
    .gg-banner__subtitle { font-size: 1rem; }
  }
</style>

{% schema %}
{
  "name": "Gift Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination."
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Gift Banner"
    }
  ]
}
{% endschema %}